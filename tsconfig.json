{
    "compilerOptions": {
        "declaration": true,
        "lib": ["es2017"],
        "module": "commonjs",
        "target": "es6",
        "skipLibCheck": true,
        "sourceMap": false,
        "strict": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "pretty": true,
        "baseUrl": ".",
        "rootDirs": ["src", "bin", "constants", "scripts", "@types"],
        "paths": {
            "@commands/*": ["src/commands/*"],
            "@root/*": ["src/root/*"],
            "@lib/*": ["src/lib/*"],
            "@actions/*": ["src/actions/*"],
            "@collections/*": ["src/collections/*"],
            "@constants": ["constants"],
            "@types": ["@types"],
            "@questions/*": ["src/questions/*"]
        }
    },
    "include": ["src/**/*", "src", "bin", "constants", "@types"],
    "exclude": ["node_modules", "templates/*", "templates/**/*"]
}
