{
    "compilerOptions": {
        "declaration": true,
        "lib": ["es2017"],
        "module": "commonjs",
        "target": "es6",
        "skipLibCheck": true,
        "sourceMap": false,
        "strict": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "pretty": true,
        "baseUrl": ".",
        "rootDirs": ["src", "bin", "collections", "constants", "scripts"],
        "paths": {
            "@commands/*": ["src/commands/*"],
            "@root/*": ["src/root/*"],
            "@lib/*": ["src/lib/*"],
            "@actions/*": ["src/actions/*"],
            "@collections/*": ["collections/*"],
            "@constants": ["constants"]
        }
    },
    "include": ["src/**/*", "src", "collections", "collections/**/*"],
    "exclude": ["node_modules", "templates"]
}
