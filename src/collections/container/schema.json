{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "$id": "ReactContainerSchema",
    "title": "ContainerOptions",
    "type": "object",
    "properties": {
        "name": {
            "type": "string",
            "description": "Имя контейнера"
        },
        "slice": {
            "type": "boolean",
            "default": true,
            "description": "Нужно ли генерировать Slice"
        },
        "epic": {
            "type": "boolean",
            "default": true,
            "description": "Нужно ли генерировать Epic"
        },
        "spec": {
            "type": "boolean",
            "default": true,
            "description": "Нужно ли генерировать тесты"
        }
    },
    "required": ["name"]
}
